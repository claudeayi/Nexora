{
  "name": "nexora-api",
  "version": "5.0.0",
  "private": true,
  "description": "Nexora Futurist API (Express + Prisma + IA + SSE + Billing)",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@prisma/client": "^5.16.1",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.16.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
